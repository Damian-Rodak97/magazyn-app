@page "/login"
@inject IJSRuntime JS
@inject NavigationManager Navigation

<div class="login-container">
    <div class="login-box">
        <h3> Logowanie do Magazynu</h3>
        
        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger">
                @errorMessage
            </div>
        }
        
        <div class="mb-3">
            <label class="form-label">Email:</label>
            <input type="email" class="form-control" @bind="email" @bind:event="oninput" @onkeypress="HandleKeyPress" placeholder="Wpisz email" />
        </div>
        
        <div class="mb-3">
            <label class="form-label">Haso:</label>
            <input type="password" class="form-control" @bind="password" @bind:event="oninput" @onkeypress="HandleKeyPress" placeholder="Wpisz haso" />
        </div>
        
        <button class="btn btn-primary w-100" @onclick="HandleLogin" disabled="@isLoading">
            @if (isLoading)
            {
                <span>Logowanie...</span>
            }
            else
            {
                <span>Zaloguj si</span>
            }
        </button>
    </div>
</div>

<style>
    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
    
    .login-box {
        background: white;
        padding: 40px;
        border-radius: 10px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.3);
        width: 100%;
        max-width: 400px;
    }
    
    .login-box h3 {
        text-align: center;
        margin-bottom: 30px;
        color: #333;
    }
    
    .login-box .form-label {
        font-weight: 500;
        color: #555;
    }
    
    .login-box .btn {
        margin-top: 10px;
        padding: 12px;
        font-size: 1.1rem;
    }
</style>

@code {
    private string email = "";
    private string password = "";
    private string errorMessage = "";
    private bool isLoading = false;
    
    private class FirebaseAuthResult
    {
        public bool success { get; set; }
        public string? user { get; set; }
        public string? error { get; set; }
    }
    
    protected override async Task OnInitializedAsync()
    {
        // Sprawd藕 czy ju偶 zalogowany przez Firebase
        try
        {
            var isLoggedIn = await JS.InvokeAsync<bool>("firebaseAuth.isLoggedIn");
            if (isLoggedIn)
            {
                Navigation.NavigateTo("./");
            }
        }
        catch
        {
            // Firebase mo偶e si jeszcze nie zaadowa
        }
    }
    
    private async Task HandleLogin()
    {
        errorMessage = "";
        
        if (string.IsNullOrWhiteSpace(email) || string.IsNullOrWhiteSpace(password))
        {
            errorMessage = "Wypenij wszystkie pola!";
            return;
        }
        
        isLoading = true;
        StateHasChanged();
        
        try
        {
            // Zaloguj przez Firebase Authentication
            var result = await JS.InvokeAsync<FirebaseAuthResult>("firebaseAuth.signIn", email, password);
            
            if (result.success)
            {
                // Sukces - przekieruj do g贸wnej strony
                Navigation.NavigateTo("./");
            }
            else
            {
                // Bd logowania
                if (result.error?.Contains("invalid-credential") == true || 
                    result.error?.Contains("user-not-found") == true ||
                    result.error?.Contains("wrong-password") == true)
                {
                    errorMessage = "Nieprawidowy email lub haso!";
                }
                else if (result.error?.Contains("too-many-requests") == true)
                {
                    errorMessage = "Zbyt wiele pr贸b logowania. Spr贸buj p贸藕niej.";
                }
                else
                {
                    errorMessage = "Bd logowania. Spr贸buj ponownie.";
                }
                
                await Task.Delay(1000); // Op贸藕nienie dla bezpieczestwa
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Bd poczenia. Sprawd藕 internet.";
            Console.WriteLine($"Login error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }
    
    private async Task HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !isLoading)
        {
            await HandleLogin();
        }
    }
}
